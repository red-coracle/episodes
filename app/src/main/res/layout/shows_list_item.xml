<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="-1dp"
    android:paddingRight="-1dp">
  <FrameLayout
      android:id="@+id/name_banner_frame"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true" >
    <TextView
        android:id="@+id/show_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        style="@style/ListItemHeading" />
    <ImageView
        android:id="@+id/banner_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" />
  </FrameLayout>

  <ToggleButton
      android:id="@+id/show_starred_toggle"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_alignParentTop="true"
      android:layout_alignParentRight="true"
      android:background="@drawable/white_gradient_reverse"
      android:focusable="false"
      android:foreground="@drawable/starred_toggle"
      android:textOff=""
      android:textOn="" />

  <ToggleButton
      android:id="@+id/show_archived_toggle"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_alignParentTop="true"
      android:layout_alignParentRight="true"
      android:layout_marginRight="32dp"
      android:background="@drawable/white_gradient"
      android:focusable="false"
      android:foreground="@drawable/archived_toggle"
      android:textOff=""
      android:textOn="" />
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/name_banner_frame">
    <ProgressBar
        android:id="@+id/show_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/WatchedProgressBar" />
    <TextView
        android:id="@+id/watched_count_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        style="@style/WatchedProgressText" />
  </FrameLayout>
</RelativeLayout>
